import * as path from 'path'
import * as inspect from 'inspect.js'
import CSVRead from '../src/csvRead'

describe('CSV Read', () =>
  describe('load', (done) =>
    it('reads a CSV file line by line', () =>
      const opts = {}
      const csv = CSVRead.load(path.join(__dirname, './fixtures/data.csv'), opts)
      csv.parse((line) =>
        inspect(line).isArray()
        inspect(line).hasLength(4)
        inspect(line[0]).isEql({
          date: '2017-01-03'
          id: 344
          name: 'Banana'
          value: 'A basket of bananas'
        })
      )

      return csv.then((res) =>
        inspect(res).isUndefined()
      )
    )
  )
)
